<% if current_user %>
  <%= form_for [@list, @list.items.new] do |f| %>
    <div class="form-group">
      <%= f.text_field :body, class: 'form-control', placeholder: "New list item" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>
